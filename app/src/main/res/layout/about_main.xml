<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<LinearLayout
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlue">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:src="@mipmap/fbla_image" />

    <TextView
        android:id="@+id/filler"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textAlignment="center"
        android:background="@color/white" />


    <TextView
        android:id="@+id/aboutHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:transitionName="AboutTxt"
        android:text="About"
        android:textSize="40sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textFontWeight="@android:integer/status_bar_notification_info_maxnum"
        android:text="FBLA is the high school division of Future Business Leaders of America-Phi Beta Lambda, Inc. FBLA helps high school students prepare for careers in business through academic competitions (FBLA Competitive Events), leadership development, and educational programs."
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="20sp"
        android:id="@+id/text">
    </TextView>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Local Officers"
        android:padding="15dp"
        android:background="@drawable/roundedbuttons"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:onClick="officer"/>
    <Button
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center"
        android:background="@drawable/roundedbuttons"
        android:textColor="@color/white"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"
        android:text="FBLA Website"
        android:onClick="website"/>

    <Button
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/roundedbuttons"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_below="@+id/aboutButton"
        android:layout_marginTop="20dp"
        android:text="Join FBLA"
        android:onClick="join"/>


    <ImageButton
        android:id="@+id/facebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/aboutButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="-70dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:onClick="facebook"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/facebook3" />

    <ImageButton
        android:id="@+id/twitter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/aboutButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-50dp"
        android:background="@android:color/transparent"
        android:onClick="twitter"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/twitter" />
    <ImageButton
        android:id="@+id/instagram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/aboutButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-50dp"
        android:background="@android:color/transparent"
        android:onClick="instagram"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/instagram" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/left"
            android:id="@+id/backBtnAbout"
            android:background="@drawable/top_button"
            android:tint="@color/white"
            android:layout_alignParentBottom="true"
            android:onClick="goBack"
            />
    </RelativeLayout>
</LinearLayout>
</ScrollView>
